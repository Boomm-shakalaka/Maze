//---------------------------------------------------------------------------
#include <vcl.h>
#pragma hdrstop

#include "Maze_Unit1.h"
#include "stdio.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
#define possible_direction 8
#define max(x,y) (x)>(y)?(x):(y);
int maze[20][20];
int m,p,top;
struct position *Stack;
TForm1 *Form1;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------


struct offset
{
	int dx,dy;
};
enum directions {N,NE,E,SE,S,SW,W,NW};
struct offset move[possible_direction];
struct position
{
	int x,y;
	directions dir;
};
struct position pop()
{
	if(top==-1)
    {
				Form1->Memo1->Lines->Add("堆B已]有|西了");
				return Stack[0];
	}
	else return Stack[top--];
}
 void push(struct position data)
{
	if(top==(m*p-1))Form1->Memo1->Lines->Add("超^堆B最大值");
	else 	Stack[++top]=data;
}
int path()
{
	struct position Stack[m*p];
	struct position step;
	int i,j,u,v,ex;
	AnsiString out;
	directions d;
	step.x=1;
	step.y=0;
	maze[1][0]=3;
	step.dir=E;
	push(step);
	while(top!=-1)
	{
		step=pop();
		i=step.x;
		j=step.y;
		d=step.dir;
		while(d<=NW)
		{
			u=i+move[d].dx;
			v=j+move[d].dy;
			if((u==m-2)&& (v==p-1))
			{
				 maze[u][v]=3;
				 push(data);
                 step.x=1;
				 step.y=0;

			}
			if(!(maze[u][v]))
			{
			maze[u][v]=3;
			   step.x=i;
				step.y=j;
				step.dir=directions(d+1);
				push(step);
				i=u;
				j=v;
				d=N;
			}
			else d=directions(d+1);

		}
	}
		Form1->Memo1->Lines->Add("此迷mo解");
}

void __fastcall TForm1::Button3Click(TObject *Sender)
{
	 Form1->Memo1->Clear();
	 FILE *fp;
	 AnsiString out, fname;
	 int  i, j;
	 if(OpenDialog1->Execute())
	 {
		fname = OpenDialog1->FileName;
		fp = fopen(fname.c_str(), "r+");//c_str函数的骰刂凳 const char *, 即把stringD成const char *
		fscanf(fp, "%d %d", &m, &p);    // Reda in two integers m & n
		m=m+2;
		p=p+2;
		Memo1->Lines->Add("m="+IntToStr(m));
		Memo1->Lines->Add("n="+IntToStr(p));
		for (i=1; i<=m-1; i++)      // Reda in m*n 0/1's into maze[][]
			for (j=1; j<=p-1; j++)
				fscanf(fp, "%d", &maze[i][j]);
		Memo1->Lines->Add("-------Map("+IntToStr(m)+" * "+IntToStr(p)+")------");
		for (i=0; i<m; i++)      // Print out maze[][] in Memo1
		{
			out ="";
			for (j=0; j<p; j++)
			{
				if(i==0 || j==0 || j==p+1 || i== m+1)
					maze[i][j]=2;
				out += "  "+IntToStr(maze[i][j]);
			}
			Memo1->Lines->Add(out);
		}
		maze[1][0]=0;//start
		maze[1][1]=0;//start
		maze[m-2][p-1]=0;//end
		// Print out maze[][] in StringGrid1
		StringGrid1->RowCount = m+3;
		StringGrid1->ColCount = p+3;
		for (i=1; i<=m+2; i++)
		{
			for (j=1; j<=p+2; j++)
			{
				StringGrid1->Cells[j-1][i-1] = maze[i][j];
			}
		}
		fclose(fp);

	 }
	 else  Memo1->Lines->Add("Nothing happens.");
}

//---------------------------------------------------------------------------

void __fastcall TForm1::Button4Click(TObject *Sender)
{
	if(path()==1)
        {
                Memo1->Lines->Add("-----------------------");
                Memo1->Lines->Add("找到出口了!");
				//printStack();
        }
        else
        {
                Memo1->Lines->Add("-----------------------");
                Memo1->Lines->Add("]有出口...");
				//printStack();
        }
	   // printMark();
	   //	seekMazeGrid1();
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button2Click(TObject *Sender)
{
		if(SaveDialog1->Execute())
		{
				FILE *fp;
				AnsiString name;
				name=Form1->SaveDialog1->FileName+".txt";
				fp = fopen(name.c_str(),"w");
				fprintf(fp,"%d %d\n",m-2,p-2);
				for(int i=1;i<m-1;i++)
				{
						for(int j=1;j<p-1;j++)
                        {
                                if(maze[i][j]==3)
								{
                                        int tmp=0;
                                        fprintf(fp,"%d ",tmp);
                                }
                                else
                                {
                                        fprintf(fp,"%d ",maze[i][j]);
                                }
                        }
                         fprintf(fp,"\n");
                }
                fclose(fp);
        }
		else  Memo1->Lines->Add("存n失");
}
